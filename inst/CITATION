citHeader("To cite epinowcast in publications use:")

citEntry(entry = "Article",
  title        = "epinowcast: Nowcast right censored epidemiological count data", # nolint
  author       = personList(as.person("Sam Abbott")),
  journal      = "Zenodo",
  year         = "2021",
  volume       = "",
  number       = "",
  pages        = "",
  doi          = "10.5281/zenodo.5637165",

  textVersion  =
  paste("Sam Abbott (2021).",
        "epinowcast: Nowcast right censored epidemiological count data, ", # nolint
        "DOI: 10.5281/zenodo.5637165")
)
